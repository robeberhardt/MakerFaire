package com.rgs.utils{	import flash.external.ExternalInterface;		public class Logger	{				private static const CONSOLE_FUNCTION_NAME							: String = "trace";				public static const LOG_EXTERNAL_ONLY									: String = "LOG_EXTERNAL_ONLY";		public static const LOG_INTERNAL_ONLY									: String = "LOG_INTERNAL_ONLY";		public static const LOG_BOTH											: String = "LOG_BOTH";		public static const LOG_NONE											: String = "LOG_NONE";				private static var _mode												: String = LOG_BOTH;				public function Logger()		{		}				public static function setMode(val:String):void		{			log("mode is being changed to " + val);			_mode = val;		}				public static function log(msg:*, ... rest):void		{						// rest[0]: Number for indent			// rest[1]: String for mode (from above consts)						var output:String = "";			var tempMode : String = _mode;						if (rest[0] != null)			{				for (var i:uint = 0; i < uint(rest[0]); i++)				{					output = output.concat("  ");				}				output = output.concat(msg);			}			else			{				output = msg;			}						if (rest[1] != null && rest[1].length > 0)			{				tempMode = rest[1];			}						switch(tempMode)			{				case LOG_EXTERNAL_ONLY :					if (ExternalInterface.available)					{						ExternalInterface.call(CONSOLE_FUNCTION_NAME, output)					}					break;								case LOG_INTERNAL_ONLY :					trace(output);					break;								case LOG_BOTH :					if (ExternalInterface.available)					{						ExternalInterface.call(CONSOLE_FUNCTION_NAME, output)					}					trace(output);					break;								default :					//					break;			}					}	}}